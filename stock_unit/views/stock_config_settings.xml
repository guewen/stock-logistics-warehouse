<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_config_settings" model="ir.ui.view">
        <field name="name">stock.unit</field>
        <field name="model">stock.config.settings</field>
        <field name="inherit_id" ref="stock.view_stock_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group name="stock_unit" string="Packaging reservation">
                    <field name="reservation_unit_pallet_factor"/>
                    <field name="reservation_unit_box_factor"/>
                    <field name="reservation_unit_wrap_factor"/>
                    <field name="reservation_unit_min_quantity"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
